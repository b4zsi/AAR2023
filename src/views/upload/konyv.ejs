<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head') %>
    <%- include('../includes/header', {oldal: oldal}) %>
<body>
    <%- include('../includes/uploads') %>

        <form class="form text-center" method="post" enctype="multipart/form-data">
            <label>
                Név: <input class="form-control" type="text" placeholder="név" name="nev" />
            </label><br>
            <label>
                ISBN szám: <input class="form-control" type="text" placeholder="isbn" name="isbn" />
            </label><br>
            <label>
                Kiadó: 
                <select class="form-control" name="kiado" id="kiado">
                    <% for(i in kiado['rows']){ %>
                    <option value="<%- kiado['rows'][i][0] %>" <% if(kiado['rows'][i][0] == kiado['rows'][0][0]){ %> selected<% } %>><%- kiado['rows'][i][1] %></option>
                    <% } %>
                </select>
            </label><br>
            <label>
                Kategoria:
                <select class="form-control" name="kategoria" id="kategoria">
                    <% for(i in kategoria['rows']){ %>
                    <option value="<%- kategoria['rows'][i][0] %>" <% if(kategoria['rows'][i][0] == kategoria['rows'][0][0]){ %> selected<% } %>><%- kategoria['rows'][i][1] %></option>
                    <% } %>
                </select>
            </label><br>
            <label>
                Oldalszám: <input class="form-control" type="number" placeholder="oldalszám" name="oldalszam" />
            </label><br>
            <label>
                Kiadás dátuma:
                <input class="form-control" type="date" placeholder="kiadas datum" name="mikor" />
            </label><br>
            <label>
                Ar: <input class="form-control" type="number" placeholder="ar" name="ar" />
            </label><br>
            <label>
                Kep: <input class="form-control" type="file" name="kep" />
            </label><br>

            <button class="gomb mt-2" type="submit">Hozzáadás</button>
        </form>
</body>

</html>
