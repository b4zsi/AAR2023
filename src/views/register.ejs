<!DOCTYPE html>
<html lang="en">
<%- include('assets/head') %>
<%- include('assets/header', {oldal: "register"}) %>
<body>
    <div id="page-container">
        <img src="img/login04.jpg" alt="kep" style="width: 100%;">
        <div class="card-img-overlay">
            <% if(hibak){ %>
                <% hibak.forEach((hiba) => { %>
                    <div class=" d-flex"><p class="hiba"><%= hiba %></p></div>
                <% }); %>
            <% } %>
            <form class="row g-3" action="/register" method="post" style="margin-top: 50px; margin-left: 100px; margin-right: 100px">
                <div class="col-12">
                  <label for="inputEmail4" class="form-label" style="color: white ; font-size: 17px;">*Email:</label>
                  <input type="email" name="email" id="email" required class="form-control">
                </div>
                <div class="col-12">
                  <label for="inputPassword4" class="form-label" style="color: white ; font-size: 17px;">*Felhasználónév:</label>
                  <input type="text" name="felhnev" id="felhnev" required class="form-control">
                </div>
                <div class="col-12">
                  <label for="inputAddress" class="form-label" style="color: white ; font-size: 17px;">*Jelszó:</label>
                  <input type="password" class="form-control" name="password" id="password" required>
                </div>
                <div class="col-12">
                  <label for="inputAddress2" class="form-label" style="color: white ; font-size: 17px;">*Lakcím:</label>
                  <input type="text" class="form-control" name="address" id="address" required>
                </div>
                <div class="col-12">
                  <label for="inputCity" class="form-label" style="color: white ; font-size: 17px;">*Telefonszám:</label>
                  <input type="tel" class="form-control" name="tel" id="tel" required>
                </div>

                <div class="col-4" style="margin-top: 10px;">
                    <label for="inputState" class="form-label" style="color: white ; font-size: 17px;">Nem:</label>
                    <select name="nem" id="nem" class="form-select">
                      <option value="man">Férfi</option>
                      <option value="woman">Nő</option>
                      <option value="other">Egyéb</option>
                    </select>
                </div>

                <div class="container" style="background-color: rgb(255, 255, 255); margin-top: 30px; padding: 10px; max-width: 97%; border-radius: 10px;">
                    <legend style="font-size: 17px; ">Ételérzékenységek:</legend>
                    <div class="form-check col-12" style="margin-left: 15px;">
                        <input class="form-check-input" type="checkbox" name="gluten" id="gluten" value="TRUE">
                        <label class="form-check-label" for="gluten" >Gluténérzékenység</label>
                    </div>
                    <div class="form-check col-12" style="margin-left: 15px;">
                        <input class="form-check-input" type="checkbox" name="laktoz" id="laktoz" value="TRUE">
                        <label class="form-check-label" for="laktoz" >Laktózérzékenység</label>
                    </div>


                    <div class="col-12" style="margin-top: 10px;">
                        <button type="submit" class="btn btn-primary">Regisztrálás</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <%- include('assets/footer') %>
</body>
</html>